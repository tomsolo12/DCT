# Data Control Tower - Environment Configuration Template
# Copy this file to .env and update the values

# Database Configuration (Required)
DATABASE_URL=postgresql://username:password@localhost:5432/dct_database

# Alternative database configurations:
# For Neon (Serverless PostgreSQL):
# DATABASE_URL=postgresql://username:password@ep-example-123456.us-east-1.aws.neon.tech/dct_database

# For Supabase:
# DATABASE_URL=postgresql://postgres:password@db.project-ref.supabase.co:5432/postgres

# Application Environment
NODE_ENV=development

# Server Configuration
PORT=5000

# Optional: BI Tool Integrations
# Power BI Integration
POWER_BI_CLIENT_ID=your_powerbi_client_id
POWER_BI_CLIENT_SECRET=your_powerbi_client_secret
POWER_BI_TENANT_ID=your_powerbi_tenant_id

# Tableau Integration  
TABLEAU_SERVER_URL=https://your-tableau-server.com
TABLEAU_USERNAME=your_tableau_username
TABLEAU_PASSWORD=your_tableau_password

# Optional: External Services
# Redis for Production Caching (optional)
REDIS_URL=redis://localhost:6379

# Email Notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# Security (optional - will use defaults if not set)
SESSION_SECRET=your-super-secret-session-key
JWT_SECRET=your-jwt-secret-key